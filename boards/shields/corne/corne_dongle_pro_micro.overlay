/*
 * Dongle + Macropad Overlay
 * Baseado no seu repo crkbd-config + suporte a 3x3 macropad + encoder + OLED
 */

#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zephyr,display = &oled;
        // Junta o kscan do Corne + Dongle no mesmo firmware
        zmk,kscan = &mock_kscan, &dongle_kscan;
        zmk,physical-layout = &foostan_corne_6col_layout, &dongle_layout;
    };

    /*
     * Layout do dongle/macropad (3x3 = 9 posições).
     * Se você usar só 8 botões, basta deixar 1 sem soldar e ignorar.
     */
    dongle_layout: keymap_transform_dongle {
        compatible = "zmk,matrix-transform";
        columns = <3>;
        rows = <3>;
        map = <
            RC(0,0) RC(0,1) RC(0,2)
            RC(1,0) RC(1,1) RC(1,2)
            RC(2,0) RC(2,1) RC(2,2)
        >;
    };

    /*
     * Definição do scanner do macropad.
     * Aqui você troca os pinos de acordo com onde ligar no nice!nano.
     * Exemplo: P0.02, P0.03, P0.04... até P0.10.
     */
    dongle_kscan: kscan_dongle {
        compatible = "zmk,kscan-gpio-direct";
        input-gpios =
            <&gpio0 2 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>,  /* linha 0, col 0 */
            <&gpio0 3 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>,  /* linha 0, col 1 */
            <&gpio0 4 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>,  /* linha 0, col 2 */
            <&gpio0 5 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>,  /* linha 1, col 0 */
            <&gpio0 6 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>,  /* linha 1, col 1 */
            <&gpio0 7 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>,  /* linha 1, col 2 */
            <&gpio0 8 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>,  /* linha 2, col 0 */
            <&gpio0 9 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>,  /* linha 2, col 1 */
            <&gpio0 10 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>; /* linha 2, col 2 */
    };

    /*
     * Encoder EC11
     * A, B = sinais quadratura
     * Resolução = 4 (passos por detecção)
     * Pino "click" pode ser adicionado como outra entrada no kscan se você quiser
     */
    dongle_encoder: encoder_0 {
        compatible = "alps,ec11";
        a-gpios = <&gpio0 11 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
        b-gpios = <&gpio0 12 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
        resolution = <4>;
    };
};

/* OLED já está configurado no seu repo (ssd1306 @ 0x3c via I2C do nice!nano) */
